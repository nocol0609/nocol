				<script type="text/javascript">
		  			function changeNum(id,obj,oldnum){
		  				if(!/^[1-9]\d*$/.test(obj.value)){
		  					alert("购买数量必须为正整数!");
		  					obj.value=oldnum;
		  					return;
		  				}
		  				window.location.href="changCartProd?id="+id+"&buyNum="+obj.value;
		  			}	  			

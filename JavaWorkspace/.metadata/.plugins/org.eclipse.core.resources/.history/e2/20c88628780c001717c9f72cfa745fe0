//		while (iterator.hasNext()) {
//			Element element = iterator.next();
//			System.out.println(element.getName());
//		}
		
		//4获取当前标签下的所有子标签
		List<Element> list=rootElement.elements();
		//遍历集合
/*		//第一种方式：普通for
		for (int i = 0; i < list.size(); i++) {
			Element element=list.get(i);
			System.out.println(element.getName());
		}*/
		//第二种方式：增强for
